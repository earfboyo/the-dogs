---
export interface Props {
  title: string;
  showHeader?: boolean;
  showFooter?: boolean;
}
const { title, showHeader = true, showFooter = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    {showHeader ? <header></header> : null}
    <slot />
    {showFooter ? <footer></footer> : null} <!-- DELETE THIS if not needed -->
  </body>
</html>
